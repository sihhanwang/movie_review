<div class="col-md-4 col-md-offset-4">
    <h2>修改電影</h2>

    <hr>
    <%= form_for @group do |f| %>
    <% if @group.errors.any? %>
<ul>
  <% @group.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

    電影名稱
    <%= f.text_field :title %>
    <br>
    劇情大綱
    <br>
    <%= f.text_area :description %>
    <br>

    <%= f.submit "確認修改", :disable_with => 'Submiting...' %>
    <% end %>

</div>
